---
//AppBar.astro
import MoreMenu from "./MoreMenu.astro";
---

<header class="app-bar">
  <div class="app-bar-left">
    <button class="back-button" onclick="history.back()">←</button>
  </div>

  <div class="app-bar-right">
    <MoreMenu />
  </div>
</header>

<style>
.app-bar {
  position: fixed; /* 常に画面上部に固定 */
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 56px;
  padding: 0 16px;
  background-color: transparent;
  box-shadow: none;
  z-index: 1000;
}

.app-bar-left {
  display: flex;
  align-items: center;
}

.app-bar-right {
  margin-left: auto; /* これだけで右端に寄せる */
  display: flex;
  align-items: center;
}

.back-button {
  font-size: 1.2rem;
  background: none;
  border: none;
  cursor: pointer;
}
</style>
