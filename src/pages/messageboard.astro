---
// src/pages/messageboard.astro
import Layout from '../layouts/Layout.astro';

// APIから返ってくるデータの型を定義
type Thread = {
  id: number;
  title: string;
  created_at: string; // JSONではDateオブジェクトは文字列になる
}

let threads: Thread[] = [];
let error: string | null = null;

try {
  // 自分のサイトのAPIを fetch で呼び出す
  //const response = await fetch(`${Astro.url.origin}/api/threads`);
  const apiUrl = new URL('/api/threads/', Astro.url);
  const response = await fetch(apiUrl); 
  //const response = await fetch('/api/threads'); 
  if (response.ok) {
    threads = await response.json();
  } else {
    error = `スレッド一覧の取得に失敗しました (ステータス: ${response.status})`;
  }
} catch (e) {
  console.error(e);
  error = "APIへの接続中にエラーが発生しました。";
}
---
<Layout title="掲示板">
  <main>
    <h1>掲示板スレッド一覧</h1>
    
    {error ? (
      <p style="color: red;">{error}</p>
    ) : (
      <>
        {threads.length > 0 ? (
          <ul>
            {threads.map(thread => (
              <li>
                <a href={`/thread/${thread.id}`}>{thread.title}</a>
                <small>({new Date(thread.created_at).toLocaleString()})</small>
              </li>
            ))}
          </ul>
        ) : (
          <p>まだスレッドがありません。</p>
        )}
      </>
    )}
  </main>
</Layout>