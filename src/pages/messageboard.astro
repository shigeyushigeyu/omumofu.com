---
// src/pages/messageboard.astro
import Layout from '../layouts/Layout.astro';
type Thread = {
  id: number;
  title: string;
  created_at: string;
}

let threads: Thread[] = [];
let error: string | null = null;

try {
  // ★★★ ここを修正 ★★★
 const apiUrl = new URL('/api/threads', 'https://api.omumofu.com');
 const response = await fetch(apiUrl);

  if (response.ok) {
    threads = await response.json();
  } else {
    error = `スレッド一覧の取得に失敗しました (ステータス: ${response.status})`;
  }
} catch (e) {
  console.error(e);
  error = "APIへの接続中にエラーが発生しました。";
}
---


<Layout title="掲示板">
  <main>
    <h1>掲示板スレッド一覧</h1>
    
    {error ? (
      <p style="color: red;">{error}</p>
    ) : (
      <>
        {threads.length > 0 ? (
          <ul>
            {threads.map(thread => (
              <li>
                <a href={`/thread/${thread.id}`}>{thread.title}</a>
                <small>({new Date(thread.created_at).toLocaleString()})</small>
              </li>
            ))}
          </ul>
        ) : (
          <p>まだスレッドがありません。</p>
        )}
      </>
    )}
  </main>
</Layout>
<style> pre { background-color: #eee; padding: 1em; white-space: pre-wrap; word-wrap: break-word; } </style>