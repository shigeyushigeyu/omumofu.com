---
const images = (() => {
  const arr = [];
  for(let i = 1; i <= 82; i++) {
    const num = i.toString().padStart(3, '0');
    arr.push(`/assets/images/gallery/${num}.png`);
  }
  return arr;
})();
---

<style>
.gallery-column {
  width: 100%;
  max-width: 100%;
  padding: 0;
  margin: 0;
}

.gallery-item {
  width: 100%;
  margin-bottom: 8px;
  background-color: #f8f8f8;
}

.gallery-item img {
  width: 100%;
  height: auto;
  display: block;
  object-fit: contain;
}
</style>

<div class="gallery-grid">
  {images.map(src => (
    <div class="gallery-item">
      <img src={src} alt="gallery image" loading="lazy" />
    </div>
  ))}
</div>
